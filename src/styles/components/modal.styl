#modal
	position: absolute
	margin: auto
	left: 0
	right: 0
	top: 0
	bottom: 0
	width: 300px
	height: 300px
	padding: 2em
	width: 50%
	height: 15em
	background-color: $pure-white
	border: 1px solid $light-border
	border-radius: 3px
	transform: scale(.9)
	opacity: 0
	box-shadow: none
	transition: all .5s ease
	&.active
		transform: scale(1)
		opacity: 1
		box-shadow: 0 0 2em 0 $shadow
