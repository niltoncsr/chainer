.tooltip
	padding: .5em 1em
	position: absolute
	display: block
	background-color: $pure-white
	top: calc(100% - 6em)
	right: 0
	left: 0
	margin: auto
	width: 25%
	text-align: center
	opacity: 0
	font-size: .8em
	border: 1px solid $light-border
	border-radius: 3px
	box-shadow: 1px 1px	$shadow
	&::after
		content: ''
		width: .5em
		height: .5em
		position: absolute
		left: 0
		right: 0
		top: calc(100% - .25em)
		margin: auto
		transform: rotate(45deg)
		border-right: 1px solid $light-border
		border-bottom: 1px solid $light-border
		background: $pure-white
		box-shadow: 1px 1px $shadow

.tooltip-enter-active
	transition: all 3s ease

.tooltip-enter
	transform: translateY(2em)
	opacity: 1
