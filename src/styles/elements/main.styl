#form-wrapper
	position: relative
	width: 30em

#new-track-wrapper
	input[type='text']
		padding: .5em 1em
		border: 1px solid $light-border
		border-radius: 3px 0 0 3px
		width: 90%
	button[type='submit']
		background: none
		border 1px solid $main-green
		border-left: none
		padding: .5em 1em
		border-radius: 0 3px 3px 0
		&:hover
			cursor: pointer
			background-color: rgba($main-green, .05)
