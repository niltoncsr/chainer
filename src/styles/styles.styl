*
	margin: 0
	padding: 0
	box-sizing: border-box


.day
	display: inline-block
	position: relative
	width: 50px
	height: 50px
	margin: 5px
	background-color: lightgreen
	.description
		display: none
		margin-top: 5px
		padding: 1px
		position: absolute
		top: 100%
		width: 100%
		background-color: rgba(0,0,0, .8)
		font-size: 9px
		text-align: center
		color: #fff
	&:hover .description
		display: block
